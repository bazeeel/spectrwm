[bar/mainbar-herbstluftwm]
monitor = ${env:MONITOR:DisplayPort-0}
;monitor-fallback = HDMI1
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true
bottom = false
separator = |

